<h1>Summary of your rental</h1>

<div class="booking-messages">
  <div class="card-description-show-booking">
    <strong><%= @animal.description %></strong>
    <br>
    <br>
    <h3>Location</h3>
    <p><%= @animal.location %></p>
    <h3>Sexe</h3>
    <p><%= @animal.sexe %></p>
    <h3>Size</h3>
    <p><%= @animal.size %></p>
    <h3>Age</h3>
    <p><%= @animal.age %></p>
    <h3>Risk factor</h3>
    <% if @animal.risk_factor == "XXX" %>
      <p style="color:red;"><strong>High</strong></p>
    <% elsif @animal.risk_factor =="XX" %>
      <p>Normal</p>
    <% elsif @animal.risk_factor =="X" %>
      <p style="color:green;"><strong>Low</strong></p>
    <% end %>
  </div>
  <div>
    <div class="card-animal">
      <%= link_to animal_path(@animal) do %>
        <% if @animal.photo.attached? %>
          <%= cl_image_tag @animal.photo.key, height: 200, width: 400, crop: :fill %>
        <% else %>
          <%= cl_image_tag "sample.jpg", height: 200, width: 400, crop: :fill %>
        <% end %>
      <% end %>
      <div class="card-animal-infos">
        <div>
          <h2><%= link_to @animal.name, animal_path(@animal) %></h2>
          <p><%= @animal.specie %> <%= @animal.location %></p>
        </div>
        <h2 class="card-animal-pricing"> <%= "#{@animal.price}$/per day" %></h2>
        <%= cl_image_tag @animal.user.photo.key, height: 40, width: 40, crop: :fill, class: "card-animal-user avatar-bordered"  %>
       </div>
    </div>
    <div class="search-form" id="show-search-from">
      <h4>Add dates for prices</h4>
      <h5>Dates</h5>
      <p>From <%= params[:starting_date].to_date %> to <%= params[:ending_date].to_date %></p>
      <h5>Price of the booking</h5>
      <%= ((params[:ending_date].to_date - params[:starting_date].to_date).to_i * @animal.price).to_s + '$' %>
      <br>
      <br>
      <%= simple_form_for [@animal, @booking] do |f| %>
        <%= f.input :starting_date, as: :hidden, html5: true, input_html: { value: params[:starting_date] } %>
        <%= f.input :ending_date, as: :hidden, html5: true, input_html: { value: params[:ending_date] } %>
        <%= f.submit :Book, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


