show.html.erb
<h1>Banner</h1>
<div>
  <p><%= "#{@animal.name}, #{@animal.specie}" %></p>
  <p><%= "@animal.image" %></p>
</div>

<div>
  <%= @animal.description %>
  <div class="form animal show">
    <%= simple_form_for [@animal, @booking] do |f| %>
      <%= f.input :content %>
      <%= f.select :rating, collection: [0, 1, 2, 3, 4, 5] %> %>
      <%= f.submit "add a review", class: "btn btn-primary" %>
    <% end %>
  </div>

</div>
