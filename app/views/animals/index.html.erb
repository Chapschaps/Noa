<h1>Trouvez votre nouveau compagnon !</h1>
<br>


<div class="cards container">
  <% @animals.each do |animal| %>
    <div class="card-animal">
      <%= cl_image_tag animal.photo.key, height: 300, width: 300, crop: :fill %>
      <div class="card-animal-infos">
        <div>
          <h2><%= link_to animal.name, animal_path(animal) %></h2>
          <p>    <%= animal.specie %> <%= animal.location %></p>
        </div>
        <h2 class="card-animal-pricing"> <%= "#{animal.price}$" %></h2>
      </div>
    </div>
  <% end %>
</div>

