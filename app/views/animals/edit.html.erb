<h1>Update <%= @animal.name %>'s profile</h1>
<%= simple_form_for [@animal] do |f| %>

<div class="container create-animal">

  <%= f.input :name, placeholder:"ex: Medor" %>
  <%= f.input :age %>
  <%= f.input :specie %>
  <%= f.input :size, collection: Animal::SIZE %>
  <%= f.input :location, placeholder:"ex: Medor" %>
  <%= f.input :sexe, collection: Animal::SEXE %>
  <%= f.input :risk_factor, collection: Animal::RISK_FACTOR %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Update animal", class: "submit-class bubbly-button" %>
  <% end %>
  <div class="bubbly-button button-all">
    <%= link_to "Back", animal_path(@animal), class: "button-link" %>
  </div>
  <!-- <button class="bubbly-button"><%#= link_to "Back", @animal_path(animal) %></button> -->
  <%#= f.button :submit, class: "btn btn-primary"%>

</div>
